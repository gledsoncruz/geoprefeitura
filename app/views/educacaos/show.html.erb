<!--script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script-->
<%- model_class = Educacao -%>
<div class="page-header">
  <h4><%= @educacao.nome %></h4>
</div>
<div class="row-fluid">
<div class="span6">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @educacao.nome %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @educacao.email.downcase %></dd>
  <dt><strong><%= model_class.human_attribute_name(:contato) %>:</strong></dt>
  <dd><%= @educacao.contato %></dd>
  <dt><strong><%= model_class.human_attribute_name(:diretor) %>:</strong></dt>
  <dd><%= @educacao.diretor %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tipo) %>:</strong></dt>
  <dd><%= @educacao.tipo %></dd>
</dl>
</div>

  <div class="span6">
     <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?&zoom=15&size=600x250&maptype=roadmap&markers=color:red%7Clabel:E%7C"+@longitude.to_s+","+@latitude.to_s+"&sensor=false" %>


    </img>
  </div>

</div>



<div class="form-actions">
  <%= link_to 'Voltar', lista_educacaos_path, :class => 'btn'  %>
  <%= link_to 'Editar', edit_educacao_path(@educacao), :class => 'btn' %>
  <%= link_to 'Excluir', educacao_path(@educacao),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
