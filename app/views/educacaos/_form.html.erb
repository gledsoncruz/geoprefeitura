<%= simple_form_for @educacao, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= f.input :email %>
  <%= f.input :contato %>
  <%= hidden_field(:educacao, :the_geom) %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>

    <button id="btnEduCancel" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>


  </div>
<% end %>
