
<%# Conditionally set remote: true. Also, passing model name as data attribute %>
<%- model_class = Educacao -%>
<% modal ||= false %>

<%= simple_form_for(@educacao, remote: true, html: {role: :form, :class => 'form-horizontal', 'data-model' => model_class.model_name.human.downcase }) do |f| %>


  <%= f.input :nome %>
  <%= f.input :email %>
  <%= f.input :contato %>
  <%= f.input :diretor %>
  <%= f.input :tipo, :collection => Educacao::TIPO %>
  <%= hidden_field(:educacao, :the_geom) %>

  <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary', :id => 'btn-educacao-submit' %>
      <!--button id="btn-educacao-submit" type="button" class="btn btn-default btn-primary">Salvar</button-->
      <button id="btnEduCancel" type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
  </div>

<% end %>
