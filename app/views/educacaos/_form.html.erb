<%= simple_form_for @educacao, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= f.input :email %>
  <%= f.input :contato %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                educacaos_path, :class => 'btn' %>
  </div>
<% end %>
