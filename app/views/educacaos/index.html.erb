<%- model_class = Educacao -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:contato) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @educacaos.each do |educacao| %>
      <tr>
        <td><%= link_to educacao.id, educacao_path(educacao) %></td>
        <td><%= educacao.nome %></td>
        <td><%= educacao.email %></td>
        <td><%= educacao.contato %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_educacao_path(educacao), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      educacao_path(educacao),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_educacao_path,
            :class => 'btn btn-primary' %>
