

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html=> { :class => 'form-signin' } ) do |f| %>

<h2 class="form-signin-heading"><%= t('devise.shared.links.login')%></h2>
    <%= f.input :email, :required => false, :autofocus => true, :class => 'input-block-level', :placeholder => "Email" %>
    <%= f.input :password, :required => false, :class => 'input-block-level', :placeholder => "Senha de acesso" %>

    <%= f.button :submit, "Acessar", :class => "btn btn-primary" %>
<br/><br/>
    <%= render "devise/shared/links" %>

<% end %>



